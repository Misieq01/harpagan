<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      sans-serif;
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  /* Header and Navigation */
  header {
    background-color: #e8e8e8;
    border-bottom: 1px solid #d0d0d0;
  }

  .navbar {
    background-color: #e8e8e8;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  /* Logo section */
  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-image {
    width: 120px;
    height: 120px;
    object-fit: contain;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .brand-name {
    font-size: 2rem;
    font-weight: bold;
    color: #2c4a7c;
    letter-spacing: 0.15rem;
    display: block;
  }

  .brand-subtitle {
    font-size: 0.85rem;
    color: #666;
    display: block;
    margin-top: -0.3rem;
  }

  /* Navigation menu */
  .nav-menu {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .nav-link {
    color: #2c4a7c;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    white-space: nowrap;
    position: relative;
    transition: all 0.3s;
  }

  .nav-link:hover {
    background-color: rgba(44, 74, 124, 0.05);
  }

  .nav-link.active {
    color: #2c4a7c;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 1.5rem;
    right: 1.5rem;
    height: 3px;
    background-color: #2c4a7c;
  }

  /* Main content */
  main {
    flex: 1;
    padding: 2rem;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  /* Mobile responsive styles */
  @media (max-width: 968px) {
    .nav-container {
      padding: 1rem;
      flex-direction: column;
      align-items: center;
      position: relative;
    }

    .logo {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.5rem;
      order: 1;
    }

    .logo-image {
      width: 90px;
      height: 90px;
    }

    .logo-text {
      align-items: center;
      text-align: center;
    }

    .brand-name {
      font-size: 1.5rem;
    }

    .brand-subtitle {
      font-size: 0.75rem;
    }

    .nav-menu {
      order: 2;
      width: 100%;
      display: flex;
      justify-content: center;
      gap: 0;
      margin-top: 1rem;
    }

    .nav-link {
      text-align: center;
      padding: 0.875rem 1.25rem;
      border-bottom: none;
    }

    .nav-link.active::after {
      left: 1.25rem;
      right: 1.25rem;
    }

    main {
      padding: 1rem;
    }
  }

  /* Footer */
  footer {
    background-color: #2c4a7c;
    color: white;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    font-size: 0.95rem;
    color: white;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-link {
    text-decoration: none;
    transition: opacity 0.3s;
  }

  .social-link:hover {
    opacity: 0.7;
  }

  .social-icon {
    width: 36px;
    height: 36px;
    background-color: white;
    color: #2c4a7c;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
  }

  /* Footer mobile styles */
  @media (max-width: 968px) {
    .footer-container {
      padding: 1.5rem 1rem;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .copyright {
      font-size: 0.85rem;
    }

    .social-links {
      gap: 1rem;
    }

    .social-icon {
      width: 32px;
      height: 32px;
      font-size: 1rem;
    }
  }
</style>
