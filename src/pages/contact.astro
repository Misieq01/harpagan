---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kontakt - Harpagan">
  <section class="contact-page">
    <div class="contact-container">
      <div class="contact-info">
        <h1 class="contact-title">Zapraszamy do kontaktu</h1>
        <p class="contact-subtitle">Masz pytania? Z przyjemnością odpowiemy!</p>

        <div class="contact-details">
          <p class="contact-item">
            <strong>Nr. tel.</strong> 000000
          </p>
          <p class="contact-item">
            <strong>E-mail</strong> ----------
          </p>
        </div>
      </div>

      <div class="contact-form-wrapper">
        <form class="contact-form" id="contactForm">
          <div class="form-row">
            <input
              type="text"
              name="firstName"
              placeholder="First name*"
              required
              class="form-input"
            />
            <input
              type="text"
              name="lastName"
              placeholder="Last name*"
              required
              class="form-input"
            />
          </div>

          <div class="form-row">
            <input
              type="email"
              name="email"
              placeholder="Email address*"
              required
              class="form-input"
            />
            <input
              type="tel"
              name="phone"
              placeholder="Phone number"
              class="form-input"
            />
          </div>

          <textarea
            name="message"
            placeholder="Message*"
            required
            rows="5"
            class="form-textarea"></textarea>

          <button type="submit" class="submit-button">Send</button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-page {
    padding: 1rem 2rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .contact-container {
    width: 100%;
    flex: 1;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 4rem;
    z-index: 1;
  }

  .contact-info {
  }

  .contact-title {
    font-size: 2.2rem;
    font-weight: bold;
    color: #1d366c;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .contact-subtitle {
    font-size: 1.05rem;
    color: #555;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .contact-details {
    margin-top: 2rem;
  }

  .contact-item {
    font-size: 1rem;
    color: #1d366c;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .contact-item strong {
    font-weight: 600;
  }

  .contact-form-wrapper {
    display: flex;
    flex: 1;
    justify-content: flex-end;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 520px;
    width: 100%;
  }

  .form-row {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 1rem;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    /* max-width: 240px; */
    padding: 0.875rem 1rem;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    font-size: 0.9rem;
    font-family: inherit;
    transition: all 0.3s;
    background-color: transparent;
    box-sizing: border-box;
  }

  .form-textarea {
    /* max-width: unset; */
    width: 520px;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #1d366c;
    box-shadow: 0 0 0 2px rgba(44, 74, 124, 0.1);
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: #bbb;
    font-weight: 300;
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .submit-button {
    background-color: #1d366c;
    color: white;
    padding: 0.75rem 2.5rem;
    border: none;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    align-self: flex-start;
  }

  .submit-button:hover {
    background-color: #1e3458;
  }

  .submit-button:active {
    transform: scale(0.98);
  }

  /* Mobile responsive styles */
  @media (max-width: 968px) {
    .contact-page {
      padding: 1.5rem 1rem;
      flex-direction: column;
      align-items: center;
    }

    .decorative-pattern {
      width: 60px;
      height: 60px;
    }

    .decorative-pattern.top-left {
      top: 15px;
      left: 15px;
    }

    .decorative-pattern.bottom-left {
      bottom: 50px;
      left: 15px;
    }

    .decorative-pattern.top-right {
      top: 50px;
      right: 40px;
      width: 50px;
      height: 50px;
    }

    .decorative-pattern.bottom-right {
      bottom: 40px;
      right: 15px;
    }

    .contact-container {
      flex-direction: column;
      gap: 2rem;
      padding: 0;
      align-items: center;
      justify-content: flex-start;
    }

    .contact-form-wrapper {
      max-width: 100%;
      width: 100%;
      flex-direction: column;
      align-items: center;
      justify-content: normal;
    }

    .contact-info {
      padding-top: 0;
      text-align: center;
    }

    .contact-title {
      font-size: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .contact-subtitle {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    .contact-details {
      margin-top: 1.5rem;
    }

    .contact-item {
      font-size: 0.9rem;
    }

    .contact-form {
      gap: 1rem;
      width: 100%;
    }

    .form-row {
    }

    .form-input,
    .form-textarea {
      padding: 0.875rem 1rem;
      font-size: 0.9rem;
    }

    .submit-button {
      width: 100%;
      padding: 0.875rem;
      align-self: stretch;
    }
  }

  @media (max-width: 600px) {
    .form-row {
      flex-direction: column;
    }
  }
</style>

<script>
  const form = document.getElementById("contactForm") as HTMLFormElement;

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    console.log("Form submitted:", data);

    // Here you would typically send the data to a server
    // For now, we'll just show an alert
    alert("Dziękujemy za wiadomość! Skontaktujemy się z Tobą wkrótce.");
    form.reset();
  });
</script>
