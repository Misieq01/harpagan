---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kontakt - Harpagan">
  <section class="contact-page">
    <div class="contact-container">
      <div class="contact-info">
        <h1 class="contact-title">Zapraszamy do kontaktu</h1>
        <p class="contact-subtitle">Masz pytania? Z przyjemnością odpowiemy!</p>

        <div class="contact-details">
          <p class="contact-item">Nr. tel. +48 793380019</p>
          <p class="contact-item">E-mail kontakt.harpagan@gmail.com</p>
        </div>
      </div>

      <div class="contact-image">
        <img src="/kontakt.jpg" alt="Kontakt" />
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-page {
    padding: 1rem 2rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .contact-container {
    width: 100%;
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 4rem;
    z-index: 1;
  }

  .contact-info {
    flex: 1;
  }

  .contact-image {
    flex: 1;
    width: 100%;
    height: 400px;
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .contact-title {
    font-size: 2.8rem;
    font-weight: bold;
    color: #1d366c;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .contact-subtitle {
    font-size: 1.2rem;
    color: #1d366c;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .contact-details {
    margin-top: 2rem;
  }

  .contact-item {
    font-size: 1rem;
    color: #1d366c;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .contact-item strong {
    font-weight: 600;
  }

  /* Mobile responsive styles */
  @media (max-width: 968px) {
    .contact-page {
      padding: 1.5rem 1rem;
      flex-direction: column;
      align-items: center;
    }

    .contact-container {
      flex-direction: column;
      gap: 2rem;
      padding: 0;
      align-items: center;
      justify-content: flex-start;
    }

    .contact-info {
      padding-top: 0;
      text-align: center;
    }

    .contact-title {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    .contact-subtitle {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .contact-details {
      margin-top: 1.5rem;
    }

    .contact-item {
      font-size: 1rem;
    }

    .contact-image {
      height: 300px;
      width: 100%;
    }
  }
</style>
